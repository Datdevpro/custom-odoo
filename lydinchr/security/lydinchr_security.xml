<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- HR Custom Security Groups -->
        <record id="group_hr_custom_user" model="res.groups">
            <field name="name">HR Custom: User</field>
            <field name="privilege_id" ref="hr.res_groups_privilege_employees"/>
            <field name="sequence">11</field>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="comment">User can view employee properties and extended information.</field>
        </record>

        <record id="group_hr_custom_manager" model="res.groups">
            <field name="name">HR Custom: Manager</field>
            <field name="privilege_id" ref="hr.res_groups_privilege_employees"/>
            <field name="sequence">12</field>
            <field name="implied_ids" eval="[(4, ref('group_hr_custom_user')), (4, ref('hr.group_hr_manager'))]"/>
            <field name="comment">Manager can manage employee properties and all extended HR information.</field>
        </record>
    </data>

    <data noupdate="1">
        <!-- Record Rules for Employee Properties -->
        <record id="employee_property_user_rule" model="ir.rule">
            <field name="name">Employee Property: User Access</field>
            <field name="model_id" ref="model_employee_property"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_custom_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="employee_property_manager_rule" model="ir.rule">
            <field name="name">Employee Property: Manager Access</field>
            <field name="model_id" ref="model_employee_property"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_custom_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>

