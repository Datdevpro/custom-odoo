<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend HR Leave Form View -->
        <record id="view_hr_leave_form_extended" model="ir.ui.view">
            <field name="name">hr.leave.form.extended</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                
                <!-- Add custom fields after request_date_from -->
                <xpath expr="//field[@name='request_date_from']" position="after">
                    <field name="is_emergency" widget="boolean_toggle"/>
                </xpath>

                <!-- Add additional information in a new page -->
                <xpath expr="//notebook" position="inside">
                    <page string="Additional Information" name="additional_info">
                        <group>
                            <group string="Leave Details">
                                <field name="leave_reason"/>
                                <field name="backup_employee_id"/>
                            </group>
                            <group string="Contact During Leave">
                                <field name="contact_during_leave" widget="phone"/>
                                <field name="address_during_leave"/>
                            </group>
                        </group>
                        <group string="Approval Information">
                            <group>
                                <field name="approved_by_id" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="rejection_reason" readonly="1" invisible="state != 'refuse'"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                
            </field>
        </record>

        <!-- Extend HR Leave Tree View -->
        <record id="view_hr_leave_tree_extended" model="ir.ui.view">
            <field name="name">hr.leave.tree.extended</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="is_emergency" optional="show" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <!-- Extend HR Leave Search View -->
        <record id="view_hr_leave_search_extended" model="ir.ui.view">
            <field name="name">hr.leave.search.extended</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.view_hr_leave_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='archived']" position="before">
                    <filter string="Emergency Leaves" name="emergency" domain="[('is_emergency', '=', True)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

